@model IEnumerable<ITI_Attendance.Models.Hr>

@{
    ViewData["Title"] = "List of Hr";
}

<h1>Hrs</h1>
<a asp-action="Create" class="btn btn-outline-info">Create</a> 
<br /><br />
<table class="table table-bordered ">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                 <a asp-action="Edit2" asp-route-id="@item.Id" class="btn btn-outline-warning">Edit</a> |
                 <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-success">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a> 
            </td>
        </tr>
}
    </tbody>
</table>
